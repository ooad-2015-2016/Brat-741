<Page
    x:Class="ProjekatSpijunskaAgencija.Views.UposlenikView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatSpijunskaAgencija.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Rectangle Fill="#FFC7C7C7" HorizontalAlignment="Left" Height="40" Margin="180,80,0,0" Stroke="#FFC7C7C7" VerticalAlignment="Top" Width="100"/>
                <Rectangle Fill="#FFC7C7C7" HorizontalAlignment="Left" Height="40" Margin="180,140,0,0" Stroke="#FFC7C7C7" VerticalAlignment="Top" Width="100"/>
                <Rectangle Fill="#FFC7C7C7" HorizontalAlignment="Left" Height="40" Margin="180,200,0,0" Stroke="#FFC7C7C7" VerticalAlignment="Top" Width="100"/>
                <Rectangle Fill="#FFC7C7C7" HorizontalAlignment="Left" Height="40" Margin="180,260,0,0" Stroke="#FFC7C7C7" VerticalAlignment="Top" Width="100"/>
                <Rectangle Fill="#FFC7C7C7" HorizontalAlignment="Left" Height="40" Margin="180,320,0,0" Stroke="#FFC7C7C7" VerticalAlignment="Top" Width="100"/>
                <TextBlock x:Name="imetxt" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap"
                	Text="Ime" VerticalAlignment="Top" Width="100" Margin="80,80,0,0"/>
                <TextBlock x:Name="prezimetxt" HorizontalAlignment="Left" Height="40" Margin="80,140,0,0" TextWrapping="Wrap"
                	Text="Prezime" VerticalAlignment="Top" Width="100"/>
                <TextBlock x:Name="emailtxt" HorizontalAlignment="Left" Height="40" Margin="80,200,0,0" TextWrapping="Wrap"
                	Text="e-mail" VerticalAlignment="Top" Width="100"/>
                <TextBlock x:Name="brojteltxt" HorizontalAlignment="Left" Height="40" Margin="80,260,0,0" TextWrapping="Wrap"
                	Text="Broj Telefona" VerticalAlignment="Top" Width="100"/>
                <TextBlock x:Name="idbrojtxt" HorizontalAlignment="Left" Height="40" Margin="80,320,0,0" TextWrapping="Wrap"
                	Text="Id Broj" VerticalAlignment="Top" Width="100"/>
                <TextBox x:Name="txtIme" HorizontalAlignment="Left" Height="40" Margin="180,80,0,0" TextWrapping="Wrap"  
                	VerticalAlignment="Top" Width="100" Foreground="Black" SelectionHighlightColor="#FF0078D7"
                	Text="{Binding Uposlenik.kontaktInfo.ime, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" RenderTransformOrigin="0.302,0.5"/>
                <TextBox x:Name="txtPrezime" HorizontalAlignment="Left" Height="40" Margin="180,140,0,0" TextWrapping="Wrap"  
                	VerticalAlignment="Top" Width="100" Foreground="Black" SelectionHighlightColor="#FF0078D7"
                	Text="{Binding Uposlenik.kontaktInfo.prezime, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" RenderTransformOrigin="0.302,0.5"/>
                <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="40" Margin="180,200,0,0" TextWrapping="Wrap"  
                	VerticalAlignment="Top" Width="100" Foreground="Black" SelectionHighlightColor="#FF0078D7"
                	Text="{Binding Uposlenik.kontaktInfo.email, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" RenderTransformOrigin="0.302,0.5"/>
                <TextBox x:Name="txtBrojTel" HorizontalAlignment="Left" Height="40" Margin="180,260,0,0" TextWrapping="Wrap"  
                	VerticalAlignment="Top" Width="100" Foreground="Black" SelectionHighlightColor="#FF0078D7"
                	Text="{Binding Uposlenik.kontaktInfo.brojTel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" RenderTransformOrigin="0.302,0.5"/>
                <TextBox x:Name="txtIdBroj" HorizontalAlignment="Left" Height="40" Margin="180,320,0,0" TextWrapping="Wrap"  
                	VerticalAlignment="Top" Width="100" Foreground="Black" SelectionHighlightColor="#FF0078D7"
                	Text="{Binding Uposlenik.idBroj, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" RenderTransformOrigin="0.302,0.5"/>
                <Button x:Name="button" Content="Trzni" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,402,0,0" Height="38" Width="80" Command="{Binding Trzni}"/>
                <Button x:Name="registriraj" Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,402,0,0" Height="38" Width="80" Command="{Binding Register}" Visibility="{Binding Visible}"/>

    </Grid>
</Page>
